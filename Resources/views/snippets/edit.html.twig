<tr class="well portfolio-edit-form-{{ id }}">
    <td colspan="9">
        {{ form_start(form, {'method': 'post', 'action': path('portfolio_edit', {id: id}), 'attr' : {'class' : 'portfolio-edit-form'}}) }}
            <div class="row-fluid">
                <div class="span12">
                    {{ form_widget(form) }}
                </div>
            </div>
            {{ form_errors(form) }}
            <hr/>
            <button type="submit" class="btn pull-right" style="margin-bottom: -5px">{{ "Save" | trans }}</button><br/>
            <div style="display:none">{{ form_rest(form) }}</div>
        {{ form_end(form, {'render_rest': false}) }}
    </td>
</tr>
